<Window x:Class="RestaurantSystem.UI.Views.ProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="User Profile" Height="500" Width="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="0">
        <!-- Header -->
        <Border Background="#673AB7" Height="80" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" Margin="24,0">
                <TextBlock Text="User Profile" FontSize="24" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock x:Name="SubtitleText" Text="View and edit your profile information" FontSize="12" Foreground="White" Opacity="0.9"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Margin="0,80,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                
                <!-- User Info Section -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Personal Information" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                    
                    <StackPanel>
                        <TextBlock Text="First Name" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                        <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,16" materialDesign:HintAssist.Hint="Enter first name" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Background="#2C2C2C" Foreground="White" BorderBrush="#404040" CaretBrush="White"/>
                        
                        <TextBlock Text="Last Name" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                        <TextBox x:Name="LastNameTextBox" Margin="0,0,0,16" materialDesign:HintAssist.Hint="Enter last name" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Background="#2C2C2C" Foreground="White" BorderBrush="#404040" CaretBrush="White"/>
                        
                        <TextBlock Text="Email" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                        <TextBox x:Name="EmailTextBox" Margin="0,0,0,16" materialDesign:HintAssist.Hint="Enter email" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Background="#2C2C2C" Foreground="White" BorderBrush="#404040" CaretBrush="White"/>
                        
                        <TextBlock Text="Phone" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                        <TextBox x:Name="PhoneTextBox" Margin="0,0,0,16" materialDesign:HintAssist.Hint="Enter phone number" Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Background="#2C2C2C" Foreground="White" BorderBrush="#404040" CaretBrush="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- Role Information -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Role and Status" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                    
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Role" FontSize="13" Foreground="#999" VerticalAlignment="Center"/>
                            <TextBlock x:Name="RoleTextBlock" FontSize="15" FontWeight="SemiBold" Foreground="#673AB7" 
                                     HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Username" FontSize="13" Foreground="#999" VerticalAlignment="Center"/>
                            <TextBlock x:Name="UsernameTextBlock" FontSize="15" Foreground="White" 
                                     HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Status" FontSize="13" Foreground="#999" VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusTextBlock" FontSize="15" FontWeight="SemiBold" Foreground="#4CAF50" 
                                     HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Password Change -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Change Password" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,16"/>
                    
                    <PasswordBox x:Name="OldPasswordBox" materialDesign:HintAssist.Hint="Current password" 
                               Margin="0,0,0,8" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               Background="#2C2C2C" Foreground="White" BorderBrush="#404040"/>
                    
                    <PasswordBox x:Name="NewPasswordBox" materialDesign:HintAssist.Hint="New password" 
                               Margin="0,0,0,8" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               Background="#2C2C2C" Foreground="White" BorderBrush="#404040"/>
                    
                    <PasswordBox x:Name="ConfirmPasswordBox" materialDesign:HintAssist.Hint="Confirm new password" 
                               Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                               Background="#2C2C2C" Foreground="White" BorderBrush="#404040"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Background="#2C2C2C" Height="60" VerticalAlignment="Bottom" BorderBrush="#404040" BorderThickness="0,1,0,0">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="CHANGE PASSWORD" Width="140" Height="36" 
                        Click="ChangePasswordButton_Click"
                        Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,8,0" Cursor="Hand"/>
                
                <Button Grid.Column="2" Content="СОХРАНИТЬ" Width="100" Height="36" 
                        Click="SaveButton_Click"
                        Background="#673AB7" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>

