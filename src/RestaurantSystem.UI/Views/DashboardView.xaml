<UserControl x:Class="RestaurantSystem.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0" 
                           Margin="0,0,0,16"
                           UniformCornerRadius="12"
                           materialDesign:ElevationAssist.Elevation="Dp2"
                           Padding="24,20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Dashboard" 
                             FontSize="28"
                             FontWeight="SemiBold"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="Overview of your restaurant operations"
                             Style="{StaticResource Caption}"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='dddd, MMMM dd, yyyy'}"
                             FontSize="14"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='HH:mm'}"
                             FontSize="24"
                             FontWeight="Bold"
                             HorizontalAlignment="Right"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- KPI Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Tables Card -->
            <materialDesign:Card Grid.Column="0" 
                               Margin="0,0,8,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <materialDesign:PackIcon Kind="TableFurniture" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="#2196F3"
                                               DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Width="24"
                               Height="24"
                               DockPanel.Dock="Right"
                               ToolTip="More info">
                            <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16"/>
                        </Button>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Total Tables" 
                                 Style="{StaticResource Caption}"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="12" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="TrendingUp" 
                                               Width="16" 
                                               Height="16"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="+2 this month" 
                                 FontSize="12"
                                 Foreground="#4CAF50"
                                 Margin="4,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Active Orders Card -->
            <materialDesign:Card Grid.Column="1" 
                               Margin="4,0,4,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <materialDesign:PackIcon Kind="Receipt" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="#FF9800"
                                               DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Width="24"
                               Height="24"
                               DockPanel.Dock="Right"
                               ToolTip="More info">
                            <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16"/>
                        </Button>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Active Orders" 
                                 Style="{StaticResource Caption}"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="8" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="ClockOutline" 
                                               Width="16" 
                                               Height="16"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Updated just now" 
                                 FontSize="12"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="4,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Reservations Today Card -->
            <materialDesign:Card Grid.Column="2" 
                               Margin="4,0,4,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <materialDesign:PackIcon Kind="CalendarCheck" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="#9C27B0"
                                               DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Width="24"
                               Height="24"
                               DockPanel.Dock="Right"
                               ToolTip="More info">
                            <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16"/>
                        </Button>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Reservations Today" 
                                 Style="{StaticResource Caption}"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="15" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="TrendingUp" 
                                               Width="16" 
                                               Height="16"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="+25% vs yesterday" 
                                 FontSize="12"
                                 Foreground="#4CAF50"
                                 Margin="4,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Revenue Today Card -->
            <materialDesign:Card Grid.Column="3" 
                               Margin="8,0,0,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <materialDesign:PackIcon Kind="CurrencyUsd" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="#4CAF50"
                                               DockPanel.Dock="Left"/>
                        <Button Style="{StaticResource MaterialDesignIconButton}"
                               Width="24"
                               Height="24"
                               DockPanel.Dock="Right"
                               ToolTip="More info">
                            <materialDesign:PackIcon Kind="DotsVertical" Width="16" Height="16"/>
                        </Button>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Revenue Today" 
                                 Style="{StaticResource Caption}"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="$1,245" 
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                        <materialDesign:PackIcon Kind="TrendingUp" 
                                               Width="16" 
                                               Height="16"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="+12.5% vs last week" 
                                 FontSize="12"
                                 Foreground="#4CAF50"
                                 Margin="4,0,0,0"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Charts and Activity -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Activity -->
            <materialDesign:Card Grid.Column="0"
                               Margin="0,0,8,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="24,20">
                <StackPanel>
                    <DockPanel Margin="0,0,0,16">
                        <TextBlock Text="Recent Activity" 
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 DockPanel.Dock="Left"/>
                        <Button Content="VIEW ALL"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               DockPanel.Dock="Right"/>
                    </DockPanel>

                    <ListView>
                        <!-- Activity Item 1 -->
                        <ListViewItem Padding="0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                       Background="#E3F2FD"
                                       Width="40"
                                       Height="40"
                                       CornerRadius="20"
                                       Margin="0,0,12,0">
                                    <materialDesign:PackIcon Kind="TableFurniture"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="#2196F3"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Table 5 occupied" FontWeight="Medium"/>
                                    <TextBlock Text="Party of 4 seated" 
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                         Text="5 min ago"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>
                        </ListViewItem>

                        <!-- Activity Item 2 -->
                        <ListViewItem Padding="0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                       Background="#FFF3E0"
                                       Width="40"
                                       Height="40"
                                       CornerRadius="20"
                                       Margin="0,0,12,0">
                                    <materialDesign:PackIcon Kind="Receipt"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="#FF9800"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Order #1234 completed" FontWeight="Medium"/>
                                    <TextBlock Text="Total: $87.50" 
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                         Text="12 min ago"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>
                        </ListViewItem>

                        <!-- Activity Item 3 -->
                        <ListViewItem Padding="0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                       Background="#F3E5F5"
                                       Width="40"
                                       Height="40"
                                       CornerRadius="20"
                                       Margin="0,0,12,0">
                                    <materialDesign:PackIcon Kind="CalendarCheck"
                                                           Width="20"
                                                           Height="20"
                                                           Foreground="#9C27B0"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="New reservation" FontWeight="Medium"/>
                                    <TextBlock Text="John Doe - 7:00 PM, Table 8" 
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                         Text="25 min ago"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </materialDesign:Card>

            <!-- Quick Stats -->
            <materialDesign:Card Grid.Column="1"
                               Margin="8,0,0,0"
                               UniformCornerRadius="12"
                               materialDesign:ElevationAssist.Elevation="Dp2"
                               Padding="24,20">
                <StackPanel>
                    <TextBlock Text="Quick Stats" 
                             FontSize="20"
                             FontWeight="SemiBold"
                             Margin="0,0,0,20"/>

                    <!-- Available Tables -->
                    <Border Background="#E8F5E9"
                           CornerRadius="8"
                           Padding="16"
                           Margin="0,0,0,12">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="CheckCircle" 
                                                       Width="20" 
                                                       Height="20"
                                                       Foreground="#4CAF50"
                                                       DockPanel.Dock="Left"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="8"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#2E7D32"
                                         DockPanel.Dock="Right"
                                         VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="Available Tables"
                                     Margin="0,4,0,0"
                                     Foreground="#2E7D32"/>
                        </StackPanel>
                    </Border>

                    <!-- Occupied Tables -->
                    <Border Background="#FFEBEE"
                           CornerRadius="8"
                           Padding="16"
                           Margin="0,0,0,12">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="Account" 
                                                       Width="20" 
                                                       Height="20"
                                                       Foreground="#F44336"
                                                       DockPanel.Dock="Left"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="4"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#C62828"
                                         DockPanel.Dock="Right"
                                         VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="Occupied Tables"
                                     Margin="0,4,0,0"
                                     Foreground="#C62828"/>
                        </StackPanel>
                    </Border>

                    <!-- Reserved Tables -->
                    <Border Background="#FFF3E0"
                           CornerRadius="8"
                           Padding="16">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="BookmarkOutline" 
                                                       Width="20" 
                                                       Height="20"
                                                       Foreground="#FF9800"
                                                       DockPanel.Dock="Left"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="3"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="#EF6C00"
                                         DockPanel.Dock="Right"
                                         VerticalAlignment="Center"/>
                            </DockPanel>
                            <TextBlock Text="Reserved Tables"
                                     Margin="0,4,0,0"
                                     Foreground="#EF6C00"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
