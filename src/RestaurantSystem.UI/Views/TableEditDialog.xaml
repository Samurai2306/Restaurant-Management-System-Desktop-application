<Window x:Class="RestaurantSystem.UI.Views.TableEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Стол" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#673AB7"
                Padding="24">
            <StackPanel>
                <TextBlock Text="{Binding Title}" 
                          FontSize="24"
                          FontWeight="SemiBold"
                          Foreground="White"/>
                <TextBlock Text="Заполните информацию о столе ниже"
                          FontSize="13"
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="24">
            <StackPanel>
                <!-- Table Name -->
                <TextBlock Text="Название стола *" 
                          FontSize="13"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="NameTextBox"
                        Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="например: Стол 1, VIP..."
                        Height="48"
                        Padding="12,0"
                        FontSize="14"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,0,0,20"/>

                <!-- Location -->
                <TextBlock Text="Расположение *" 
                          FontSize="13"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ComboBox x:Name="LocationComboBox"
                         SelectedValue="{Binding Location}"
                         materialDesign:HintAssist.Hint="Выберите расположение..."
                         Height="48"
                         Padding="12,0"
                         FontSize="14"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Margin="0,0,0,20">
                    <ComboBoxItem Content="Основной зал" Tag="MainHall"/>
                    <ComboBoxItem Content="Терраса" Tag="Terrace"/>
                    <ComboBoxItem Content="У окна" Tag="Window"/>
                    <ComboBoxItem Content="VIP комната" Tag="VIPRoom"/>
                    <ComboBoxItem Content="Бар" Tag="Bar"/>
                </ComboBox>

                <!-- Seats Count -->
                <TextBlock Text="Количество мест *" 
                          FontSize="13"
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <TextBox x:Name="SeatsTextBox"
                        Text="{Binding SeatsCount, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Number of seats"
                        Height="48"
                        Padding="12,0"
                        FontSize="14"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Margin="0,0,0,20"/>

                <!-- Is Active -->
                <CheckBox x:Name="IsActiveCheckBox"
                         IsChecked="{Binding IsTableActive, Mode=TwoWay}"
                         Content="Table is active"
                         FontSize="14"
                         Margin="0,8,0,0"/>

                <TextBlock Text="* Required fields"
                          FontSize="12"
                          Foreground="#999"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="ОТМЕНА"
                       Click="CancelButton_Click"
                       Height="42"
                       Padding="24,0"
                       Margin="0,0,12,0"
                       Background="#2C2C2C"
                       Foreground="White"
                       BorderBrush="#404040"
                       BorderThickness="1"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="СОХРАНИТЬ"
                       Click="SaveButton_Click"
                       Height="42"
                       Padding="32,0"
                       Background="#673AB7"
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="13"
                       Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

