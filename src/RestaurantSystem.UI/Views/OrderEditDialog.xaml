<Window x:Class="RestaurantSystem.UI.Views.OrderEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Order"
        Height="500"
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0"
                VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <Border Background="#673AB7"
                        Padding="20"
                        CornerRadius="8"
                        Margin="0,0,0,20">
                    <TextBlock Text="Создать заказ"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="White"/>
                </Border>

                <!-- Form -->
                <StackPanel>
                    <!-- Table -->
                    <TextBlock Text="Стол *"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <ComboBox x:Name="TableComboBox"
                            Height="40"
                            FontSize="14"
                              DisplayMemberPath="Name"
                            SelectedValuePath="Id"
                              Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            Margin="0,0,0,20"/>

                    <!-- Waiter -->
                    <TextBlock Text="Официант"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <ComboBox x:Name="WaiterComboBox"
                            Height="40"
                            FontSize="14"
                              DisplayMemberPath="FullName"
                            SelectedValuePath="Id"
                              Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            Margin="0,0,0,20"/>

                    <!-- Статус заказа -->
                    <TextBlock Text="Статус заказа"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <ComboBox x:Name="StatusComboBox"
                            Height="40"
                            FontSize="14"
                              Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <ComboBoxItem Content="Новый"
                                Tag="New"
                                IsSelected="True"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="В работе"
                                Tag="InProgress"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Готов"
                                Tag="Ready"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Подача"
                                Tag="Served"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Оплачен"
                                Tag="Paid"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Отменён"
                                Tag="Cancelled"
                                Background="#2C2C2C"
                                Foreground="White"/>
                    </ComboBox>

                    <!-- Время создания -->
                    <TextBlock Text="Время создания"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <DatePicker x:Name="CreatedDatePicker"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,0,8"/>
                    <TextBox x:Name="CreatedTimeTextBox"
                            Height="32"
                            FontSize="13"
                            Margin="0,0,0,20"
                            Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"/>

                    <!-- Время закрытия (опционально) -->
                    <TextBlock Text="Время закрытия (если есть)"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <DatePicker x:Name="ClosedDatePicker"
                            Height="40"
                            FontSize="14"
                            Margin="0,0,0,8"/>
                    <TextBox x:Name="ClosedTimeTextBox"
                            Height="32"
                            FontSize="13"
                            Margin="0,0,0,20"
                            Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"/>

                    <!-- Special Instructions -->
                    <TextBlock Text="Особые пожелания"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,6"/>
                    <TextBox x:Name="InstructionsTextBox"
                            MinHeight="100"
                            Padding="12,8"
                            FontSize="14"
                             TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                             Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                            BorderThickness="1"/>

                    <TextBlock Text="* После создания заказа можно добавить блюда."
                               FontSize="11"
                            Foreground="#999"
                            Margin="0,16,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,20,0,0">
            <Button Content="Отмена"
                    IsCancel="True"
                    Click="Cancel_Click"
                    Background="Transparent"
                    Foreground="#999"
                    BorderBrush="#404040"
                    BorderThickness="1"
                    Padding="24,8"
                    FontSize="13"
                    Cursor="Hand"
                    Margin="0,0,12,0"/>
            <Button Content="Создать заказ"
                    IsDefault="True"
                    Click="Save_Click"
                    Background="#673AB7"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="24,8"
                    FontSize="13"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
