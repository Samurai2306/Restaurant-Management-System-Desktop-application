<Window x:Class="RestaurantSystem.UI.Views.OrderEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Order"
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#673AB7" Padding="20" CornerRadius="8" Margin="0,0,0,20">
            <TextBlock Text="Create New Order" FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Table -->
            <TextBlock Text="Table *" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
            <ComboBox x:Name="TableComboBox" Height="40" FontSize="14"
                     DisplayMemberPath="Name" SelectedValuePath="Id"
                     Background="#2C2C2C" Foreground="White" BorderBrush="#404040" BorderThickness="1" Margin="0,0,0,20"/>
            
            <!-- Waiter -->
            <TextBlock Text="Waiter ID" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
            <TextBox x:Name="WaiterTextBox" Height="40" Padding="12,0" FontSize="14" Text="WAITER01"
                     Background="#2C2C2C" Foreground="White" BorderBrush="#404040" BorderThickness="1" Margin="0,0,0,20"/>
            
            <!-- Special Instructions -->
            <TextBlock Text="Special Instructions" FontSize="13" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,6"/>
            <TextBox x:Name="InstructionsTextBox" MinHeight="100" Padding="12,8" FontSize="14"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     Background="#2C2C2C" Foreground="White" BorderBrush="#404040" BorderThickness="1"/>
            
            <TextBlock Text="* Note: You can add dishes to this order after creating it." 
                     FontSize="11" Foreground="#999" Margin="0,16,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" IsCancel="True" Click="Cancel_Click"
                    Background="Transparent" Foreground="#999" BorderBrush="#404040" BorderThickness="1" 
                    Padding="24,8" FontSize="13" Cursor="Hand" Margin="0,0,12,0"/>
            <Button Content="Create Order" IsDefault="True" Click="Save_Click"
                    Background="#673AB7" Foreground="White" BorderThickness="0" 
                    Padding="24,8" FontSize="13" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
