<Window x:Class="RestaurantSystem.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Система Управления Рестораном - Вход" 
        Height="1280" Width="1280"
        VerticalAlignment="Center"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Grid>
        <!-- Header -->
        <Border Background="#673AB7" Height="120" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Silverware" Width="56" Height="56" 
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="Система Управления Рестораном" FontSize="20" FontWeight="Bold" 
                         Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,120,0,20">
            <StackPanel Margin="50,20,50,30">
                
                <TextBlock x:Name="WelcomeTextBlock" Text="Добро пожаловать!" FontSize="28" FontWeight="Bold" 
                         Foreground="White" Margin="0,0,0,8" HorizontalAlignment="Center" TextAlignment="Center"/>
                <TextBlock x:Name="SubtitleTextBlock" Text="Войдите, чтобы продолжить" FontSize="16" 
                         Foreground="#999" Margin="0,0,0,32" HorizontalAlignment="Center"/>
        
                <!-- Registration Fields (Hidden by default) -->
                <TextBlock x:Name="FirstNameLabel" Text="First Name" FontSize="15" FontWeight="SemiBold" 
                         Foreground="White" Margin="0,0,0,12" Visibility="Collapsed"/>
                <TextBox x:Name="FirstNameTextBox" materialDesign:HintAssist.Hint="Enter first name" 
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Background="#2C2C2C" Foreground="White" BorderBrush="#404040" 
                       CaretBrush="White" Height="50" Margin="0,0,0,20" FontSize="14"
                       Visibility="Collapsed"/>
                
                <TextBlock x:Name="LastNameLabel" Text="Last Name" FontSize="15" FontWeight="SemiBold" 
                         Foreground="White" Margin="0,0,0,12" Visibility="Collapsed"/>
                <TextBox x:Name="LastNameTextBox" materialDesign:HintAssist.Hint="Enter last name" 
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Background="#2C2C2C" Foreground="White" BorderBrush="#404040" 
                       CaretBrush="White" Height="50" Margin="0,0,0,20" FontSize="14"
                       Visibility="Collapsed"/>
                
                <!-- Username -->
                <TextBlock Text="Имя пользователя" FontSize="15" FontWeight="SemiBold" 
                         Foreground="White" Margin="0,0,0,12"/>
                <TextBox x:Name="UsernameTextBox" materialDesign:HintAssist.Hint="Enter username" 
                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                       Background="#2C2C2C" Foreground="White" BorderBrush="#404040" 
                       CaretBrush="White" Height="50" Margin="0,0,0,20" FontSize="14"
                       KeyDown="UsernameTextBox_KeyDown"/>
                
                <!-- Password -->
                <TextBlock Text="Пароль" FontSize="15" FontWeight="SemiBold" 
                         Foreground="White" Margin="0,0,0,12"/>
                <PasswordBox x:Name="PasswordBox" materialDesign:HintAssist.Hint="Enter password" 
                           Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                           Background="#2C2C2C" Foreground="White" BorderBrush="#404040" 
                           Height="50" Margin="0,0,0,20" FontSize="14"
                           KeyDown="PasswordBox_KeyDown"/>
            
                <!-- Error Message -->
                <Border x:Name="ErrorBorder" Background="#3F1F1F" BorderBrush="#F44336" 
                      BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,20" 
                      Visibility="Collapsed">
                    <TextBlock x:Name="ErrorMessageTextBlock" 
                             Foreground="#F44336" FontSize="14" 
                             TextWrapping="Wrap" TextAlignment="Center"/>
                </Border>
                
                <!-- Action Buttons -->
                <Button x:Name="PrimaryButton" Content="ВОЙТИ" Width="380" Height="52" Margin="0,0,0,16" 
                      Click="PrimaryButton_Click"
                      Background="#673AB7" Foreground="White" BorderThickness="0" 
                      FontSize="16" FontWeight="Bold" Cursor="Hand"
                      HorizontalAlignment="Center"/>
                
                <Button x:Name="ToggleButton" Content="Нет аккаунта? Зарегистрироваться" 
                      Width="380" Height="40" Margin="0,0,0,24"
                      Click="ToggleButton_Click"
                      Background="Transparent" Foreground="#673AB7" BorderThickness="1" 
                      BorderBrush="#673AB7"
                      FontSize="14" Cursor="Hand"
                      HorizontalAlignment="Center"/>
            
                <!-- Footer Info -->
                <Border Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                      CornerRadius="8" Padding="20" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Демо-аккаунты" FontSize="16" FontWeight="Bold" 
                                 Foreground="#673AB7" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                        
                        <Border Background="#1E1E1E" BorderBrush="#404040" BorderThickness="1" 
                              CornerRadius="4" Padding="12" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="👤 Аккаунт администратора" FontSize="14" FontWeight="Bold" 
                                         Foreground="#4CAF50" Margin="0,0,0,8"/>
                                <TextBlock FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,4">
                                <Run Text="Логин: " Foreground="#999"/>
                                <Run Text="admin" Foreground="#4CAF50" FontWeight="Bold"/>
                            </TextBlock>
                            <TextBlock FontSize="13" Foreground="#CCCCCC">
                                <Run Text="Пароль: " Foreground="#999"/>
                                    <Run Text="admin123" Foreground="#4CAF50" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="#1E1E1E" BorderBrush="#404040" BorderThickness="1" 
                              CornerRadius="4" Padding="12">
                            <StackPanel>
                                <TextBlock Text="🍽️ Аккаунт официанта" FontSize="14" FontWeight="Bold" 
                                         Foreground="#4CAF50" Margin="0,0,0,8"/>
                            <TextBlock FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,4">
                                <Run Text="Логин: " Foreground="#999"/>
                                <Run Text="waiter" Foreground="#4CAF50" FontWeight="Bold"/>
                            </TextBlock>
                            <TextBlock FontSize="13" Foreground="#CCCCCC">
                                <Run Text="Пароль: " Foreground="#999"/>
                                    <Run Text="waiter123" Foreground="#4CAF50" FontWeight="Bold"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
