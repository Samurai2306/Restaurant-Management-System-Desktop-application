<UserControl x:Class="RestaurantSystem.UI.Views.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:RestaurantSystem.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:AnalyticsViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid Background="#1E1E1E">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                
                <!-- Header -->
                <Border Background="#2C2C2C" Padding="24" CornerRadius="8" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Панель аналитики" 
                                 FontSize="28" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
                        <TextBlock Text="Обзор ресторана в реальном времени" 
                                 FontSize="14" Foreground="#999"/>
                    </StackPanel>
                </Border>

                <!-- KPI Cards Grid -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Tables -->
                    <Border Grid.Column="0" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="0,0,8,0">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="TableFurniture" Width="32" Height="32" 
                                                   Foreground="#2196F3" HorizontalAlignment="Left" Margin="0,0,0,12"/>
                            <TextBlock Text="Total Tables" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalTables}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Orders -->
                    <Border Grid.Column="1" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="4,0">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="Receipt" Width="32" Height="32" 
                                                   Foreground="#FF9800" HorizontalAlignment="Left" Margin="0,0,0,12"/>
                            <TextBlock Text="Active Orders" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ActiveOrders}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Today Reservations -->
                    <Border Grid.Column="2" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="4,0">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CalendarCheck" Width="32" Height="32" 
                                                   Foreground="#9C27B0" HorizontalAlignment="Left" Margin="0,0,0,12"/>
                            <TextBlock Text="Reservations" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalReservations}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Today Revenue -->
                    <Border Grid.Column="3" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="8,0,0,0">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="CurrencyUsd" Width="32" Height="32" 
                                                   Foreground="#4CAF50" HorizontalAlignment="Left" Margin="0,0,0,12"/>
                            <TextBlock Text="Today Revenue" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TodayRevenue, StringFormat='${0:F2}'}" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Detailed Statistics -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Table Status -->
                    <Border Grid.Column="0" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="Table Status" FontSize="18" FontWeight="SemiBold" 
                                     Foreground="White" Margin="0,0,0,16"/>
                            
                            <Border Background="#2E7D32" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <TextBlock Text="Available" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding AvailableTables}" FontSize="24" FontWeight="Bold" 
                                             Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <Border Background="#C62828" CornerRadius="6" Padding="12">
                                <Grid>
                                    <TextBlock Text="Occupied" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding OccupiedTables}" FontSize="24" FontWeight="Bold" 
                                             Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Menu Status -->
                    <Border Grid.Column="1" Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                            CornerRadius="8" Padding="20" Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Menu Status" FontSize="18" FontWeight="SemiBold" 
                                     Foreground="White" Margin="0,0,0,16"/>
                            
                            <Border Background="#2196F3" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <TextBlock Text="Total Dishes" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TotalDishes}" FontSize="24" FontWeight="Bold" 
                                             Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                            
                            <Border Background="#4CAF50" CornerRadius="6" Padding="12">
                                <Grid>
                                    <TextBlock Text="Available" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding AvailableDishes}" FontSize="24" FontWeight="Bold" 
                                             Foreground="White" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

