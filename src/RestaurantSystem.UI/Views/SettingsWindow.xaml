<Window x:Class="RestaurantSystem.UI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Настройки" Height="850" Width="700"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="0">
        <!-- Header -->
        <Border Background="#673AB7" Height="80" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" Margin="24,0">
                <TextBlock Text="⚙️ Настройки приложения" FontSize="24" FontWeight="Bold" 
                         Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Margin="0,80,0,0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                
                <!-- Theme Selection -->
                <Border Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Тема оформления" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="White" Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton x:Name="DarkPurpleRadio" Content="🌙 Тёмная + Фиолетовая" 
                                       GroupName="Theme" IsChecked="True"
                                       FontSize="15" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="LightOrangeRadio" Content="☀️ Светлая + Оранжевая" 
                                       GroupName="Theme" 
                                       FontSize="15" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Language Selection -->
                <Border Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Язык интерфейса" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="White" Margin="0,0,0,16"/>
                        
                        <ComboBox x:Name="LanguageComboBox" 
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 Background="#404040" Foreground="White" BorderBrush="#555555"
                                 Height="40">
                            <ComboBoxItem Content="English (Английский)" Tag="English"/>
                            <ComboBoxItem Content="Русский (Russian)" Tag="Russian"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- General Settings -->
                <Border Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Общие настройки" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="White" Margin="0,0,0,16"/>
                        
                        <CheckBox x:Name="NotificationsCheckBox" Content="Включить уведомления" 
                                FontSize="14" Foreground="White" Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="AutoRefreshCheckBox" Content="Автоматическое обновление данных" 
                                FontSize="14" Foreground="White" Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,8,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Интервал обновления (секунды)" FontSize="14" 
                                     Foreground="White" VerticalAlignment="Center"/>
                            <TextBox x:Name="RefreshIntervalTextBox" Grid.Column="1" 
                                   Width="80" Text="30"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Background="#404040" Foreground="White" BorderBrush="#555555"/>
                        </Grid>
                        
                        <CheckBox x:Name="SoundCheckBox" Content="Включить звуковые эффекты" 
                                FontSize="14" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Business Settings -->
                <Border Background="#2C2C2C" BorderBrush="#404040" BorderThickness="1" 
                       CornerRadius="8" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Бизнес настройки" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="White" Margin="0,0,0,16"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Налоговая ставка (%)" FontSize="14" 
                                     Foreground="White" VerticalAlignment="Center"/>
                            <TextBox x:Name="TaxRateTextBox" Grid.Column="1" 
                                   Width="80" Text="10"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Background="#404040" Foreground="White" BorderBrush="#555555"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Символ валюты" FontSize="14" 
                                     Foreground="White" VerticalAlignment="Center"/>
                            <TextBox x:Name="CurrencySymbolTextBox" Grid.Column="1" 
                                   Width="80" Text="$"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   Background="#404040" Foreground="White" BorderBrush="#555555"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Background="#2C2C2C" Height="60" VerticalAlignment="Bottom" 
              BorderBrush="#404040" BorderThickness="0,1,0,0">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="СБРОСИТЬ" Width="150" Height="36" 
                      Click="ResetButton_Click"
                      Background="#404040" Foreground="White" BorderThickness="0" 
                      Margin="0,0,8,0" Cursor="Hand"/>
                
                <Button Grid.Column="2" Content="СОХРАНИТЬ" Width="140" Height="36" 
                      Click="SaveButton_Click"
                      Background="#673AB7" Foreground="White" BorderThickness="0" 
                      Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>

