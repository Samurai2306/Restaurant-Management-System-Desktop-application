<UserControl x:Class="RestaurantSystem.UI.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:RestaurantSystem.UI.ViewModels.Orders"
             d:DataContext="{d:DesignInstance Type=vm:OrdersViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid Margin="0" Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White"
                Padding="24"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Orders Management" 
                             FontSize="28"
                             FontWeight="SemiBold"/>
                    <TextBlock Text="Manage active and completed orders"
                             FontSize="14"
                             Foreground="#666"
                             Margin="0,6,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Button Content="NEW ORDER" 
                            Command="{Binding AddOrderCommand}"
                            Height="42"
                            Padding="24,0"
                            FontWeight="SemiBold"
                            FontSize="13"
                            Margin="0,0,12,0"
                            Background="#673AB7"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                    <Button Content="â†»" 
                            Command="{Binding RefreshCommand}"
                            Height="42"
                            Width="42"
                            FontSize="18"
                            FontWeight="Bold"
                            Background="White"
                            Foreground="#673AB7"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Orders Grid -->
        <Border Grid.Row="1"
                Background="White"
                Margin="24"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <DataGrid ItemsSource="{Binding Orders}"
                     SelectedItem="{Binding SelectedOrder}"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     HeadersVisibility="All"
                     GridLinesVisibility="None"
                     IsReadOnly="True"
                     RowHeight="60"
                     FontSize="14"
                     BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order #" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Table" Binding="{Binding TableName}" Width="*"/>
                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedTime, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='${0:F2}'}" Width="100"/>
                    <DataGridTextColumn Header="Items" Binding="{Binding ItemsCount}" Width="80"/>
                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="View"
                                           Command="{Binding DataContext.ViewOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           Height="32"
                                           Padding="12,0"
                                           Margin="0,0,8,0"
                                           Background="Transparent"
                                           Foreground="#673AB7"
                                           BorderBrush="#673AB7"
                                           BorderThickness="1"
                                           FontSize="12"
                                           Cursor="Hand"/>
                                    <Button Content="Close"
                                           Command="{Binding DataContext.CloseOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           Height="32"
                                           Padding="12,0"
                                           Background="Transparent"
                                           Foreground="#4CAF50"
                                           BorderBrush="#4CAF50"
                                           BorderThickness="1"
                                           FontSize="12"
                                           Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
