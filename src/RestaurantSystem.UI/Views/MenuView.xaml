<UserControl x:Class="RestaurantSystem.UI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:RestaurantSystem.UI.ViewModels.Menu"
             d:DataContext="{d:DesignInstance Type=vm:MenuViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid Margin="0" Background="#1E1E1E">
        <Grid.Resources>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="#404040"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Style.Triggers>
                    <Trigger Property="IsHighlighted" Value="True">
                        <Setter Property="Background" Value="#505050"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="#404040"/>
                <Setter Property="Foreground" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsDropDownOpen" Value="True">
                        <Setter Property="Background" Value="#505050"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2C2C2C"
                Padding="24"
                BorderBrush="#404040"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title and Buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Управление меню" 
                                 FontSize="28"
                                 FontWeight="SemiBold"
                                 Foreground="White"/>
                        <TextBlock Text="Управление блюдами и пунктами меню"
                                 FontSize="14"
                                 Foreground="#999"
                                 Margin="0,6,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Button Content="ДОБАВИТЬ БЛЮДО" 
                                Command="{Binding AddDishCommand}"
                                Height="42"
                                Padding="24,0"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Margin="0,0,12,0"
                                Background="#673AB7"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="↻" 
                                Command="{Binding RefreshCommand}"
                                Height="42"
                                Width="42"
                                FontSize="18"
                                FontWeight="Bold"
                                Background="White"
                                Foreground="#673AB7"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
                
                <!-- Search -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="400"
                             Height="42"
                             Padding="14,0"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Background="#404040"
                             Foreground="White"
                             BorderBrush="#666"
                             BorderThickness="1"
                             materialDesign:HintAssist.Hint="Search dishes..."/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dishes Grid -->
        <Border Grid.Row="1"
                Background="#2C2C2C"
                Margin="24"
                CornerRadius="8"
                BorderBrush="#404040"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <DataGrid ItemsSource="{Binding Dishes}"
                     SelectedItem="{Binding SelectedDish}"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     HeadersVisibility="All"
                     GridLinesVisibility="None"
                     SelectionMode="Single"
                     IsReadOnly="True"
                     RowHeight="60"
                     FontSize="14"
                     BorderThickness="0"
                     Background="Transparent"
                     MaxHeight="600">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#505050"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#666666"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#404040"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#555555"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" FontWeight="Medium"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="Auto"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='${0:F2}'}" Width="Auto"/>
                    <DataGridTextColumn Header="Cooking Time" Binding="{Binding CookingTimeMinutes, StringFormat='{}{0} min'}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Actions" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit"
                                           Command="{Binding DataContext.EditDishCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           Padding="12,0"
                                           Margin="0,0,8,0"
                                           Background="Transparent"
                                           Foreground="#673AB7"
                                           BorderBrush="#673AB7"
                                           BorderThickness="1"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Cursor="Hand"/>
                                    <Button Content="Delete"
                                           Command="{Binding DataContext.DeleteDishCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                           Padding="12,0"
                                           Background="Transparent"
                                           Foreground="#F44336"
                                           BorderBrush="#F44336"
                                           BorderThickness="1"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
