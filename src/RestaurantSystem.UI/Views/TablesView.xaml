<UserControl x:Class="RestaurantSystem.UI.Views.TablesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:RestaurantSystem.UI.ViewModels.Tables"
             d:DataContext="{d:DesignInstance Type=vm:TablesViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" 
                           Margin="0,0,0,16"
                           UniformCornerRadius="12"
                           materialDesign:ElevationAssist.Elevation="Dp2"
                           Padding="24,20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Tables Management" 
                             FontSize="28"
                             FontWeight="SemiBold"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="Manage restaurant tables and their availability"
                             Style="{StaticResource Caption}"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding AddTableCommand}"
                            Height="40"
                            Padding="16,0"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" 
                                                   Width="20" 
                                                   Height="20"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="ADD TABLE" 
                                     VerticalAlignment="Center"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding RefreshCommand}"
                            Height="40"
                            Padding="12,0"
                            ToolTip="Refresh">
                        <materialDesign:PackIcon Kind="Refresh" 
                                               Width="20" 
                                               Height="20"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>

        <!-- Filter Panel -->
        <materialDesign:Card Grid.Row="1" 
                           Margin="0,0,0,16"
                           UniformCornerRadius="12"
                           materialDesign:ElevationAssist.Elevation="Dp1"
                           Padding="20,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Filter" 
                                       Width="20" 
                                       Height="20"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Foreground="{StaticResource PrimaryBrush}"/>
                
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search tables..."
                         Width="250"
                         Margin="0,0,16,0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                
                <Button Content="SEARCH"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Height="40"
                        Padding="16,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Tables Grid -->
        <materialDesign:Card Grid.Row="2"
                           UniformCornerRadius="12"
                           materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                            VerticalAlignment="Top"
                            Height="4"/>

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding Tables}"
                         SelectedItem="{Binding SelectedTable}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         HeadersVisibility="All"
                         GridLinesVisibility="None"
                         SelectionMode="Single"
                         IsReadOnly="True"
                         RowHeight="56"
                         FontSize="14"
                         materialDesign:DataGridAssist.CellPadding="16,12"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="16,12">
                    <DataGrid.Columns>
                        <!-- Status Indicator -->
                        <DataGridTemplateColumn Header="" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12" Height="12" Margin="8,0">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Available">
                                                        <Setter Property="Fill" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                        <Setter Property="Fill" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Reserved">
                                                        <Setter Property="Fill" Value="#FF9800"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Table Name -->
                        <DataGridTextColumn Header="Table Name" 
                                          Binding="{Binding Name}" 
                                          Width="*"
                                          FontWeight="Medium"/>
                        
                        <!-- Location -->
                        <DataGridTemplateColumn Header="Location" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MapMarker" 
                                                               Width="16" 
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,8,0"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding Location}" 
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Seats -->
                        <DataGridTemplateColumn Header="Capacity" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountGroup" 
                                                               Width="16" 
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,6,0"
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding SeatsCount}" 
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text=" seats" 
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                 Margin="4,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Status -->
                        <DataGridTemplateColumn Header="Status" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" 
                                           Padding="12,6"
                                           HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Available">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Reserved">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="Medium" FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Status}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Available">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Occupied">
                                                            <Setter Property="Foreground" Value="#C62828"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Reserved">
                                                            <Setter Property="Foreground" Value="#EF6C00"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Active Status -->
                        <DataGridCheckBoxColumn Header="Active" 
                                              Binding="{Binding IsActive, Mode=OneWay}" 
                                              Width="Auto"
                                              IsReadOnly="True"/>
                        
                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Command="{Binding DataContext.EditTableCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               ToolTip="Edit"
                                               Margin="4,0">
                                            <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                               Command="{Binding DataContext.DeleteTableCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                               ToolTip="Delete"
                                               Foreground="#F44336"
                                               Margin="4,0">
                                            <materialDesign:PackIcon Kind="Delete" Width="18" Height="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="TableFurniture" 
                                           Width="64" 
                                           Height="64"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                    <TextBlock Text="No tables found"
                             Style="{StaticResource H2}"
                             Margin="0,16,0,4"
                             HorizontalAlignment="Center"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="Click 'ADD TABLE' to create your first table"
                             Style="{StaticResource Caption}"
                             HorizontalAlignment="Center"
                             Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
