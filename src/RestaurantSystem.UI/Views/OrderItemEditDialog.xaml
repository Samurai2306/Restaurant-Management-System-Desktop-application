<Window x:Class="RestaurantSystem.UI.Views.OrderItemEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Order Item"
        Height="450"
        Width="500"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid Margin="0">
        <!-- Header -->
        <Border Background="#673AB7"
                Height="80"
                VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center"
                    Margin="24,0">
                <TextBlock Text="Добавить позицию в заказ"
                        FontSize="24"
                        FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Margin="0,80,0,0"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="24">

                <!-- Dish Selection -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Блюдо"
                            FontSize="16"
                            FontWeight="SemiBold"
                               Foreground="White"
                            Margin="0,0,0,8"/>
                    <ComboBox x:Name="DishComboBox"
                            materialDesign:HintAssist.Hint="Select dish"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                              DisplayMemberPath="Name"
                            SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Количество"
                            FontSize="16"
                            FontWeight="SemiBold"
                               Foreground="White"
                            Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="QuantityTextBox"
                                Grid.Column="0"
                                 materialDesign:HintAssist.Hint="Quantity (1-100)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Background="#2C2C2C"
                                Foreground="White"
                                BorderBrush="#404040"
                                 CaretBrush="White"
                                Text="1"/>

                        <Button Grid.Column="1"
                                Content="−"
                                Width="36"
                                Height="36"
                                Click="DecreaseButton_Click"
                                Background="#404040"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="8,0,0,0"
                                FontSize="18"/>

                        <Button Grid.Column="2"
                                Content="+"
                                Width="36"
                                Height="36"
                                Click="IncreaseButton_Click"
                                Background="#404040"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="8,0,0,0"
                                FontSize="18"/>
                    </Grid>
                </StackPanel>

                <!-- Special Instructions -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Особые пожелания"
                            FontSize="16"
                            FontWeight="SemiBold"
                               Foreground="White"
                            Margin="0,0,0,8"/>
                    <TextBox x:Name="InstructionsTextBox"
                             materialDesign:HintAssist.Hint="Optional instructions..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                             CaretBrush="White"
                            AcceptsReturn="True"
                            MinHeight="80"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Unit Price -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Цена за единицу ($)"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,8"/>
                    <TextBox x:Name="UnitPriceTextBox"
                            materialDesign:HintAssist.Hint="Цена блюда"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040"
                             CaretBrush="White"
                            Text="0.00"/>
                </StackPanel>

                <!-- Order Item Status -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Статус позиции"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="0,0,0,8"/>
                    <ComboBox x:Name="StatusComboBox"
                            materialDesign:HintAssist.Hint="Статус"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Background="#2C2C2C"
                            Foreground="White"
                            BorderBrush="#404040">
                        <ComboBoxItem Content="Новый"
                                Tag="New"
                                IsSelected="True"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="В работе"
                                Tag="InProgress"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Готов"
                                Tag="Ready"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Подача"
                                Tag="Served"
                                Background="#2C2C2C"
                                Foreground="White"/>
                        <ComboBoxItem Content="Отменён"
                                Tag="Cancelled"
                                Background="#2C2C2C"
                                Foreground="White"/>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Background="#2C2C2C"
                Height="60"
                VerticalAlignment="Bottom"
                BorderBrush="#404040"
                BorderThickness="0,1,0,0">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="ОТМЕНА"
                        Width="100"
                        Height="36"
                        Click="CancelButton_Click"
                        Background="#404040"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,8,0"
                        Cursor="Hand"/>

                <Button Grid.Column="2"
                        Content="ДОБАВИТЬ"
                        Width="100"
                        Height="36"
                        Click="AddButton_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>

