<mahapps:MetroWindow x:Class="RestaurantSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:RestaurantSystem.UI"
        xmlns:viewModels="clr-namespace:RestaurantSystem.UI.ViewModels"
      mc:Ignorable="d"
        Title="{Binding Title}"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}">

    <mahapps:MetroWindow.LeftWindowCommands>
      <mahapps:WindowCommands>
    <Button Content="??" />
        </mahapps:WindowCommands>
    </mahapps:MetroWindow.LeftWindowCommands>

 <mahapps:MetroWindow.RightWindowCommands>
        <mahapps:WindowCommands>
            <Button Content="??" />
     </mahapps:WindowCommands>
    </mahapps:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
   <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

        <!-- App Bar -->
        <materialDesign:ColorZone Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4"
                                  Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="Silverware" 
                                           Width="32" 
                                           Height="32" 
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           Margin="0,0,12,0"/>
                    <TextBlock Text="Restaurant Management System"
                             VerticalAlignment="Center"
                             FontSize="20"
                             FontWeight="SemiBold"
                             Foreground="White"/>
                </StackPanel>
                <TextBlock Text="{Binding Source={x:Static local:App.Version}, StringFormat='v{0}'}"
                          DockPanel.Dock="Right"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          FontSize="13"
                          Foreground="White"
                          Opacity="0.8"
                          Margin="0,0,16,0"/>
            </DockPanel>
        </materialDesign:ColorZone>

      <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="200" MaxWidth="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

                <!-- Navigation Menu -->
                <Border Grid.Column="0" 
                        Background="#FAFAFA"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,1,0">
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="NAVIGATION" 
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Margin="20,0,0,16"
                                 Foreground="#999"/>
                        
                        <Button Command="{Binding NavigateTablesCommand}"
                                Height="48"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🪑" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Tables" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateReservationsCommand}"
                                Height="48"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Reservations" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateMenuCommand}"
                                Height="48"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🍽️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Menu" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateOrdersCommand}"
                                Height="48"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Orders" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Separator Margin="16,12" Background="#E0E0E0"/>
                        
                        <Button Height="48"
                                Background="Transparent"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"
                                Padding="20,0"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Analytics" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <ContentControl Grid.Column="1"
                               Margin="16"
                               Content="{Binding CurrentView}"/>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Mode="Standard" 
                                Grid.Row="2"
                                Height="28"
                                Padding="12,0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="CheckCircle" 
                                           Width="14" 
                                           Height="14"
                                           VerticalAlignment="Center"
                                           Foreground="Green"
                                           Margin="0,0,6,0"/>
                    <TextBlock Text="Ready"
                             VerticalAlignment="Center"
                             FontSize="12"/>
                </StackPanel>
                <TextBlock Text="{Binding Source={x:Static local:App.Version}, StringFormat='Version {0}'}"
                         DockPanel.Dock="Right"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         FontSize="11"
                         Foreground="{StaticResource TextSecondaryBrush}"/>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>

</mahapps:MetroWindow>