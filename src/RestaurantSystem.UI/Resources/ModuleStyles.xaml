<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Card Styles -->
    <Style x:Key="ModuleCard" TargetType="materialDesign:Card" BasedOn="{StaticResource MaterialDesignCard}">
        <Setter Property="Margin" Value="16"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="UniformCornerRadius" Value="8"/>
        <Setter Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
    </Style>

    <!-- Header Styles -->
    <Style x:Key="ModuleHeaderPanel" TargetType="DockPanel">
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="LastChildFill" Value="False"/>
    </Style>

    <!-- Filter Panel Styles -->
    <Style x:Key="FilterPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Content Panel Styles -->
    <Style x:Key="ContentPanel" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlay" TargetType="Grid">
    <Setter Property="Background" Value="#80000000"/>
  <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

    <!-- Error Message Style -->
    <Style x:Key="ErrorMessage" TargetType="TextBlock">
     <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,8,0,0"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

</ResourceDictionary>