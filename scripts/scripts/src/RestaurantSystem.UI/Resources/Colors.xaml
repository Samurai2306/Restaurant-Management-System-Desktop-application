<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="PrimaryLightColor">#64B5F6</Color>
    <Color x:Key="PrimaryDarkColor">#1976D2</Color>
    
  <!-- Secondary Colors -->
    <Color x:Key="SecondaryColor">#FF4081</Color>
    <Color x:Key="SecondaryLightColor">#FF80AB</Color>
    <Color x:Key="SecondaryDarkColor">#F50057</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FF9800</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    <Color x:Key="InfoColor">#2196F3</Color>
    
    <!-- Table Status Colors -->
<Color x:Key="TableAvailableColor">#4CAF50</Color>
    <Color x:Key="TableReservedColor">#FF9800</Color>
    <Color x:Key="TableOccupiedColor">#F44336</Color>
    <Color x:Key="TableCleaningColor">#9E9E9E</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundLightColor">#F5F5F5</Color>
    <Color x:Key="BackgroundDarkColor">#2D2D30</Color>
    <Color x:Key="SurfaceLightColor">#FFFFFF</Color>
    <Color x:Key="SurfaceDarkColor">#424242</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#212121</Color>
    <Color x:Key="TextSecondaryColor">#757575</Color>
    <Color x:Key="TextHintColor">#9E9E9E</Color>
    <Color x:Key="TextLightColor">#FFFFFF</Color>
    
    <!-- SolidColorBrush resources for Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
  <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="TableAvailableBrush" Color="{StaticResource TableAvailableColor}"/>
    <SolidColorBrush x:Key="TableReservedBrush" Color="{StaticResource TableReservedColor}"/>
    <SolidColorBrush x:Key="TableOccupiedBrush" Color="{StaticResource TableOccupiedColor}"/>
    <SolidColorBrush x:Key="TableCleaningBrush" Color="{StaticResource TableCleaningColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLightColor}"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDarkColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="{StaticResource TextHintColor}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLightColor}"/>
</ResourceDictionary>